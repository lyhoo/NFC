<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="389dp"
        android:layout_height="292dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/give_thing"
        app:layout_constraintEnd_toEndOf="@+id/take_thing"
        app:layout_constraintStart_toEndOf="@+id/take_thing"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars[10]"
        android:src="@drawable/nfc1"/>

    <Button
        android:id="@+id/take_thing"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginEnd="3dp"
        android:layout_weight="1"
        android:text="取货"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/person"
        app:layout_constraintEnd_toStartOf="@+id/give_thing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/give_thing"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_weight="1"
        android:text="寄货"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/take_thing"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/person"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="个人中心"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/take_thing"
        app:layout_constraintStart_toEndOf="@+id/take_thing"
        app:layout_constraintTop_toBottomOf="@+id/give_thing" />

</android.support.constraint.ConstraintLayout>